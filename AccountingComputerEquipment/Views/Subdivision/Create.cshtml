@model Subdivision

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Subdivision</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="SubdivisionName"></label>
            <input asp-for="SubdivisionName" class="form-control" />
            <span asp-validation-for="SubdivisionName" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All"></div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Subdivision" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>