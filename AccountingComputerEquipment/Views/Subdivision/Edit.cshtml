@model Subdivision

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Изменить подразделение</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">Наименование подразделения</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All"></div>
        <button type="submit" class="btn btn-primary" style="width:150px">Изменить</button>
        <a asp-controller="Subdivision" asp-action="Index" class="btn btn-secondary" style="width:150px">Вернуться к списку</a>
    </div>
</form>