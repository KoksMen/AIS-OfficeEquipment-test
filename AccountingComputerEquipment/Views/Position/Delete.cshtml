@model Position

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Удалить должность</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="PositionName">Наименование должности</label>
            <input asp-for="PositionName" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Удалить</button>
        <a asp-controller="Position" asp-action="Index" class="btn btn-secondary" style="width:150px">Вернуться к списку</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
