@model Position

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Создать должность</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="PositionName">Название должности</label>
            <input asp-for="PositionName" class="form-control" />
            <span asp-validation-for="PositionName" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All"></div>
        <button type="submit" class="btn btn-primary" style="width:150px">Создать</button>
        <a asp-controller="Position" asp-action="Index" class="btn btn-secondary" style="width:150px">Вернуться к списку</a>
    </div>
</form>