@model IEnumerable<UserOperatingSystem>
@{
    ViewData["Title"] = "Операционные системы";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Операционные системы</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="UserOperatingSystem" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Добавить операционную систему
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bondered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    OS
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="80%">
                        @obj.UserOperatingSystemName
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="UserOperatingSystem" asp-action="Edit" asp-route-id="@obj.UserOperatingSystemId"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Изменить</a>
                            <a asp-controller="UserOperatingSystem" asp-action="Delete" asp-route-id="@obj.UserOperatingSystemId"
                           class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Удалить</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>