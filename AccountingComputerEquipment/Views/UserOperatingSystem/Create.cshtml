@model UserOperatingSystem

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Добавить операционную систему</h2>
        </div>
        <hr />
        <div class="mb-3">
            <label asp-for="UserOperatingSystemName">Наименование операционной системы</label>
            <input asp-for="UserOperatingSystemName" class="form-control"/>
            <span asp-validation-for="UserOperatingSystemName" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All"></div>
        <button type="submit" class="btn btn-primary" style="width:150px">Создать</button>
        <a asp-controller="UserOpetingSystem" asp-action="Index" class="btn btn-secondary" style="width:150px">Вернуться к списку</a>
    </div>
</form>