@model AccountingComputerEquipment.Models.Computer

@{
    ViewBag.Title = "Edit user";
}

<h2>Изменение пользователя</h2>

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Пользователь</legend>
        <p>
            Инв. номер компьютера<br />
            @Html.EditorFor(model => model.ComputerInventoryNumber)
        </p>
        <p>
            Сер. номер компьютера<br />
            @Html.EditorFor(model => model.ComputerSerialNumber)
        </p>
        <p>
            Имя комьютера <br />
            @Html.EditorFor(model => model.ComputerName)
        </p>
        <p>
            Имя пользователя<br />
            @Html.EditorFor(model => model.UserSystemName)
        </p>
        <p>
            IP компьютера <br />
            @Html.EditorFor(model => model.ComputerIp)
        </p>
        <p>
            Процессор <br />
            @Html.EditorFor(model => model.CPU)
        </p>
        <p>
            Видеокарта <br />
            @Html.EditorFor(model => model.GPU)
        </p>
        <p>
            ОЗУ <br />
            @Html.EditorFor(model => model.RAM)
        </p>
        <p>
            Материнская плата<br />
            @Html.EditorFor(model => model.Motherboard)
        </p>
        <p>
            Жёсткий диск<br />
            @Html.EditorFor(model => model.HDD)
        </p>
        <p>
            Сетевая карта<br />
            @Html.EditorFor(model => model.LANCard)
        </p>
        <p>
            DVD<br />
            @Html.EditorFor(model => model.DVD)
        </p>
        <p>
            Блок питания<br />
            @Html.EditorFor(model => model.PSU)
        </p>
        <p>
            Инв. номер принтера<br />
            @Html.EditorFor(model => model.PrinterInventoryNumber)
        </p>
        <p>
            Сер. номер принтера<br />
            @Html.EditorFor(model => model.PrinterSerialNumber)
        </p>
        <p>
            Имя принтера<br />
            @Html.EditorFor(model => model.PrinterName)
        </p>
        <p>
            IP принтера<br />
            @Html.EditorFor(model => model.PrinterIp)
        </p>
        <p>
            Тип принтера<br /> @*Сделай выпадающий список*@
            @Html.EditorFor(model => model.PrinterType)
            @*@Html.DropDownListFor(model => model.Computer., ViewBag.Subdivisions as SelectList)*@
        </p>
        <p>
            Инв. номер монитора<br />
            @Html.EditorFor(model => model.PCMonitorInventoryNumber)
        </p>
        <p>
            Сер. номер монитора<br />
            @Html.EditorFor(model => model.PCMonitorSerialNumber)
        </p>
        <p>
            Имя монитора<br />
            @Html.EditorFor(model => model.PCMonitorName)
        </p>
        <p>
            Инв. номер планшета<br />
            @Html.EditorFor(model => model.TabletInventoryNumber)
        </p>
        <p>
            Сер. номер планшета<br />
            @Html.EditorFor(model => model.TabletSerialNumber)
        </p>
        <p>
            Имя планшета<br />
            @Html.EditorFor(model => model.TabletName)
        </p>
        <p>
            Инв. номер сервера<br />
            @Html.EditorFor(model => model.ServerInventoryNumber)
        </p>
        <p>
            Сер. номер сервера<br />
            @Html.EditorFor(model => model.ServerSerialNumber)
        </p>
        <p>
            Имя сервера<br />
            @Html.EditorFor(model => model.ServerName)
        </p>
        <p>
            IP сервера<br />
            @Html.EditorFor(model => model.ServerIp)
        </p>
        <p>
            ОС<br /> @*выпадающий список*@
            @*@Html.DropDownListFor(model => model.UserOperatingSystemId, ViewBag.UserOperatingSystems as SelectList)*@
        </p>
        <p>
            Приложения<br />
            @Html.EditorFor(model => model.Softwares)
        </p>
        @*//*@
        <p>
            <input type="submit" value="Изменить пользователя" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Вернуться к списку пользователей", "Index")
</div>

